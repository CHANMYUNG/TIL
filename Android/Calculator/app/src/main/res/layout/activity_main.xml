<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nooheat.learnapp.MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Number1"
        android:text=""
        android:hint="input Number1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Number2"
        android:text=""
        android:hint="input Number2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
           android:layout_width="wrap_content"
           android:layout_height="50dp"
            android:id="@+id/addButton"
            android:text="+"
            android:textSize="30dp"
            android:onClick="addClick"
          />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/subButton"
            android:text="-"
            android:textSize="30dp"
            android:onClick="subClick"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/mulButton"
            android:text="*"
            android:textSize="30dp"
            android:onClick="mulClick"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/divButton"
            android:text="/"
            android:textSize="30dp"
            android:onClick="divClick"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Result : "
            android:textSize="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/Result"
            android:text=""
            android:textSize="15dp"/>


    </LinearLayout>

</LinearLayout>

